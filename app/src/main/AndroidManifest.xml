            android:name=".AccountActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UKActivity"
            android:label="@string/title_activity_uk" />
        <activity
            android:name=".UAEActivity"
            android:label="@string/title_activity_uae" />


        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".LoginActivity" />
        </activity>

        <activity
            android:name=".InvoiceActivity"
            android:label="@string/title_activity_invoice"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".DatesActivity"
            android:label="@string/pick_up_date" />
