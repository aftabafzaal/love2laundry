<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".LoyaltyActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:id="@+id/checkout_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            >
            <RelativeLayout
                android:id="@+id/content_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_below="@+id/drawer_layout"

                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >

                <TextView
                    android:id="@+id/personal_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5d5d5d"
                    android:text="@string/personal_information"
                    android:textStyle="bold"
                    android:layout_marginTop="55dip"
                    />


                <TextView
                    android:id="@+id/label_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/first_name"
                    android:textStyle="bold"
                    android:layout_below="@+id/personal_information" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="*"
                    android:layout_below="@+id/personal_information"
                    android:layout_toRightOf="@+id/label_first_name" />

                <EditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/first_name"
                    android:padding="10dp"
                    android:layout_below="@+id/label_first_name" />

                <TextView
                    android:id="@+id/label_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/last_name"
                    android:textStyle="bold"
                    android:layout_below="@+id/first_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="*"
                    android:layout_below="@+id/first_name"
                    android:layout_toRightOf="@+id/label_last_name" />

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/last_name"
                    android:padding="10dp"
                    android:layout_below="@+id/label_last_name" />

                <TextView
                    android:id="@+id/label_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/email"
                    android:textStyle="bold"
                    android:layout_below="@+id/last_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="*"
                    android:layout_below="@+id/last_name"
                    android:layout_toRightOf="@+id/label_email" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:padding="10dp"
                    android:layout_below="@+id/label_email" />

                <TextView
                    android:id="@+id/label_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/phone_number"
                    android:textStyle="bold"
                    android:layout_below="@+id/email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="*"
                    android:layout_below="@+id/email"
                    android:layout_toRightOf="@+id/label_phone" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/phone_number"
                    android:padding="10dp"
                    android:layout_below="@+id/label_phone" />

                <TextView
                    android:id="@+id/label_referral_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/referral_code"
                    android:textStyle="bold"
                    android:layout_below="@+id/phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="*"
                    android:layout_below="@+id/phone"
                    android:layout_toRightOf="@+id/label_referral_code" />

                <EditText
                    android:id="@+id/referral_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/referral_code"
                    android:padding="10dp"
                    android:layout_below="@+id/label_referral_code" />


                <TextView
                    android:id="@+id/address_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5d5d5d"
                    android:text="@string/address_information"
                    android:textStyle="bold"
                    android:layout_below="@+id/referral_code"
                    />


                <TextView
                    android:id="@+id/label_post_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/post_code"
                    android:textStyle="bold"
                    android:layout_below="@+id/address_information" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="*"
                    android:layout_below="@+id/address_information"
                    android:layout_toRightOf="@+id/label_post_code" />

                <EditText
                    android:id="@+id/post_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/post_code"
                    android:padding="10dp"
                    android:layout_below="@+id/label_post_code" />


                <TextView
                    android:id="@+id/label_building_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/building_name_number"
                    android:textStyle="bold"
                    android:layout_below="@+id/post_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="*"
                    android:layout_below="@+id/post_code"
                    android:layout_toRightOf="@+id/label_building_name" />

                <EditText
                    android:id="@+id/building"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/building_name_number"
                    android:padding="10dp"
                    android:layout_below="@+id/label_building_name" />

                <TextView
                    android:id="@+id/label_street_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/street_name"
                    android:textStyle="bold"
                    android:layout_below="@+id/building" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="*"
                    android:layout_below="@+id/building"
                    android:layout_toRightOf="@+id/label_street_name" />

                <EditText
                    android:id="@+id/street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/street_name"
                    android:padding="10dp"
                    android:layout_below="@+id/label_street_name" />

                <TextView
                    android:id="@+id/label_town"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/town"
                    android:textStyle="bold"
                    android:layout_below="@+id/street" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="*"
                    android:layout_below="@+id/street"
                    android:layout_toRightOf="@+id/label_town" />

                <EditText
                    android:id="@+id/town"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/town"
                    android:padding="10dp"
                    android:layout_below="@+id/label_town" />



                <TextView
                    android:id="@+id/change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5d5d5d"
                    android:text="@string/change_password"
                    android:textStyle="bold"
                    android:layout_below="@+id/town"
                    />


                <TextView
                    android:id="@+id/label_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/prompt_password"
                    android:textStyle="bold"
                    android:layout_below="@+id/change_password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=""
                    android:layout_below="@+id/change_password"
                    android:layout_toRightOf="@+id/label_password" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:padding="10dp"
                    android:layout_below="@+id/label_password" />

                <TextView
                    android:id="@+id/label_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/confirm_password"
                    android:textStyle="bold"
                    android:layout_below="@+id/password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=""
                    android:layout_below="@+id/password"
                    android:layout_toRightOf="@+id/label_confirm_password" />



                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/confirm_password"
                    android:padding="10dp"
                    android:layout_below="@+id/label_confirm_password" />

                <Button
                    android:id="@+id/update_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textStyle="bold"
                    android:layout_below="@+id/confirm_password" />


            </RelativeLayout>
        </ScrollView>





    </android.support.design.widget.CoordinatorLayout>


<android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    app:headerLayout="@layout/nav_header_navigation"
    app:menu="@menu/activity_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>